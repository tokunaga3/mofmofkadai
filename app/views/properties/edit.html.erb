<h1>物件編集</h1>

<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%=pluralize(property.errors.count, "error") %>
         prohibited this property from being saved:
       </h2>
      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :物件名 %>
    <%= form.text_field:name  %>
    <%= form.hidden_field :name %>
    <%= form.label :賃料 %>
    <%= form.number_field :price %><nobr>円</nobr>
    <%= form.hidden_field :price %>
    <%= form.label :住所 %>
    <%= form.text_field :address %>
    <%= form.hidden_field :address %>
    <%= form.label :築年数 %>
    <%= form.number_field :old %><nobr>年</nobr>
    <%= form.hidden_field :old %>
    <%= form.label :備考 %>
    <%= form.text_area :content %>
    <%= form.hidden_field :content %>
    <%= form.submit "更新する"%>
  </div>
<% end %>

<%= link_to '詳細', property_path %>
<%= link_to '戻る', properties_path %>
